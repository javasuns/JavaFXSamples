<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javasuns.samples.controller.service.ShareContentController">
   <top>
      <fx:include fx:id="header" source="../header/Header.fxml" />
   </top>
   <center>
      <VBox alignment="CENTER" maxWidth="-Infinity" style="-fx-padding: 1em; -fx-spacing: 1.5em;">
         <children>
            <TextField fx:id="txtUserInput" promptText="Text to be shared" />
            <Button fx:id="btnShared" alignment="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Share Text" />
            <Region maxWidth="1.7976931348623157E308" style="-fx-min-height: 10em; -fx-max-width: 10em; -fx-background-color: -fx-options-color;" styleClass="svg_share" />
         </children>
      </VBox>
   </center>
</BorderPane>
