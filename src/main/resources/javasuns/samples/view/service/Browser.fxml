<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javasuns.samples.controller.service.BrowserController">
   <top>
      <fx:include fx:id="header" source="../header/Header.fxml" />
   </top>
   <center>
      <VBox alignment="CENTER" maxWidth="-Infinity" style="-fx-padding: 1em; -fx-spacing: 1.5em;">
         <children>
            <Button fx:id="btnGluonSamples" alignment="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonPressed" text="Gluon Attach Samples">
               <graphic>
                  <Region maxWidth="1.7976931348623157E308">
                     <styleClass>
                        <String fx:value="img_gluon_logo" />
                        <String fx:value="size_image_small" />
                     </styleClass>
                  </Region>
               </graphic>
            </Button>
            <Button fx:id="btnGluonPlugin" alignment="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonPressed" text="Gluon Client plugin for Gradle">
               <graphic>
                  <Region maxWidth="1.7976931348623157E308">
                     <styleClass>
                        <String fx:value="img_gluon_logo" />
                        <String fx:value="size_image_small" />
                     </styleClass>
                  </Region>
               </graphic>
            </Button>
            <Button fx:id="btnJavasuns" alignment="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonPressed" text="Source Code (GitHub)">
               <graphic>
                  <Region maxWidth="1.7976931348623157E308">
                     <styleClass>
                        <String fx:value="img_javasuns_logo" />
                        <String fx:value="size_image_small" />
                     </styleClass>
                  </Region>
               </graphic>
            </Button>
            <Region maxWidth="1.7976931348623157E308" style="-fx-min-height: 10em; -fx-max-width: 10em; -fx-background-color: -fx-options-color;" styleClass="svg_browser" />
         </children>
      </VBox>
   </center>
</BorderPane>
